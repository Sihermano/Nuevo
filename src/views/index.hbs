<div class="col-md-10">
    <div class="card">
        <div class="card-header">
            <h1>Analytics</h1>
        </div>
        <div class="card-body">
            {{#if analytics}}
            <ul>
                <h3>Registros hasta el momento</h3>
                {{#each analytics}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{location}}/
                    {{water}} /
                    {{electicity}} 
                </li>
                {{/each}}
            </ul>
            {{else}}
            <h1>No hay datos</h1>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/new-data" method="POST">
                <div class="form-group">
                    <input type="text" name="location" placeholder="location" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="water" placeholder="water" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="electicity" placeholder="electicity" class="form-control">
                </div>
                <button class="btn btn-primary btn-block">
                    Add
                </button>
            </form>
        </div>
    </div>
</div>